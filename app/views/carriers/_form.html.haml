= form_for @carrier do |f|
  - if @carrier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@carrier.errors.count, "error")} prohibited this carrier from being saved:"
      %ul
        - @carrier.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
